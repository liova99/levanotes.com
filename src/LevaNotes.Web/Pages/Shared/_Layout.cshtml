    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="alternate" href="https://levanotes.com/post/gr/" hreflang="el" />
    <link rel="alternate" href="https://levanotes.com/post/en/" hreflang="en" />
    <link rel="alternate" hreflang="x-default" href="https://levanotes.com/" />

    <title>@ViewData["Title"] - LevaNotes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav role="navigation">
            <div id="logo">
                @if (@Context.Request.Path == "/")
                {
                    <h1 id="site-title"><a title="Levanotes - Levan Kelesidis Blog" rel="home" asp-page="/Index">LevaNotes</a></h1>
                }
                else
                {
                    <p id="site-title"><a title="Levan Kelesidis" rel="home" asp-page="/Index">LevaNotes</a></p>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <button onclick="scrollToTop()" id="toTopBtn" class="toTopBtn" title="Go to top">
        <img class="upArrorSvg" src="/svg/up-arrow.svg"/>
    </button>

    <cache vary-by="@DateTime.UtcNow.Year">
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - @DateTime.UtcNow.Year LevaNotes
            </div>
        </footer>
    </cache>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

